<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/theme_default_primary"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"/>

        <TextView
            android:text="@string/detail_timer_hours_initial"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="6dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/minutes"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"/>

        <TextView
            android:text="@string/detail_timer_minutes_initial"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginEnd="6dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/seconds"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textColor="@android:color/white"
            android:textSize="36sp"/>

        <TextView
            android:text="@string/detail_timer_seconds_initial"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal" >

        <com.amusebouche.ui.CustomNumberPicker
            android:id="@+id/hoursPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" />

        <com.amusebouche.ui.CustomNumberPicker
            android:id="@+id/minutesPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp" />

        <com.amusebouche.ui.CustomNumberPicker
            android:id="@+id/secondsPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/settings_languages_buttons_height"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <Button
            android:id="@+id/cancel_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_timer_cancel_button"
            android:textColor="@color/theme_default_accent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dialog_button_padding"
            android:paddingStart="@dimen/dialog_button_padding"
            android:paddingEnd="@dimen/dialog_button_padding"
            android:enabled="true" />

        <Button
            android:id="@+id/set_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_timer_start_button"
            android:textColor="@color/theme_default_accent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dialog_button_padding"
            android:paddingStart="@dimen/dialog_button_padding"
            android:paddingEnd="@dimen/dialog_button_padding"
            android:enabled="true" />

    </LinearLayout>

</LinearLayout>