<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/settings_section_text_size"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/settings_item_texts_right_margin"
            android:layout_marginTop="@dimen/settings_item_basic_padding"
            android:layout_marginStart="@dimen/settings_item_basic_padding"
            android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
            android:textColor="@color/theme_default_accent"
            android:text="@string/settings_general_section"/>

        <!-- First setting -->
        <RelativeLayout
            android:id="@+id/setting_offline_mode_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/settings_item_texts_right_margin"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_marginStart="@dimen/settings_item_basic_padding"
                android:layout_marginBottom="@dimen/settings_item_basic_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
                    android:textSize="@dimen/settings_item_primary_text_size"
                    android:textColor="@color/primary_text"
                    android:text="@string/settings_offline_mode_primary_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/settings_item_secondary_text_size"
                    android:textColor="@color/secondary_text"
                    android:text="@string/settings_offline_mode_secondary_text"/>

            </LinearLayout>

            <Switch
                android:id="@+id/setting_offline_mode_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_item_switch_margin"
                android:layout_marginEnd="@dimen/settings_item_switch_margin"
                android:layout_alignParentEnd="true"
                android:clickable="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_divider_height"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"/>

        </RelativeLayout>


        <!-- Second setting -->
        <RelativeLayout
            android:id="@+id/setting_wifi_mode_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/settings_item_texts_right_margin"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_marginStart="@dimen/settings_item_basic_padding"
                android:layout_marginBottom="@dimen/settings_item_basic_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
                    android:textSize="@dimen/settings_item_primary_text_size"
                    android:textColor="@color/primary_text"
                    android:text="@string/settings_wifi_mode_primary_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/settings_item_secondary_text_size"
                    android:textColor="@color/secondary_text"
                    android:text="@string/settings_wifi_mode_secondary_text"/>

            </LinearLayout>

            <Switch
                android:id="@+id/setting_wifi_mode_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_item_switch_margin"
                android:layout_marginEnd="@dimen/settings_item_switch_margin"
                android:layout_alignParentEnd="true"
                android:clickable="false" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/settings_section_text_size"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/settings_item_texts_right_margin"
            android:layout_marginTop="@dimen/settings_item_basic_padding"
            android:layout_marginStart="@dimen/settings_item_basic_padding"
            android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
            android:textColor="@color/theme_default_accent"
            android:text="@string/settings_languages_section"/>


        <!-- Third setting -->
        <RelativeLayout
            android:id="@+id/setting_recipes_languages_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/settings_item_basic_padding"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_marginStart="@dimen/settings_item_basic_padding"
                android:layout_marginBottom="@dimen/settings_item_basic_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
                    android:textSize="@dimen/settings_item_primary_text_size"
                    android:textColor="@color/primary_text"
                    android:text="@string/settings_recipes_languages_primary_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/settings_item_secondary_text_size"
                    android:textColor="@color/secondary_text"
                    android:text="@string/settings_recipes_languages_secondary_text"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
                        android:textSize="@dimen/settings_item_selected_text_size"
                        android:textColor="@color/primary_text"
                        android:text="@string/settings_recipes_language_selected_text"/>

                    <TextView
                        android:id="@+id/setting_recipes_language_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/settings_item_primary_text_margin"
                        android:textSize="@dimen/settings_item_selected_text_size"
                        android:textColor="@color/secondary_text"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_divider_height"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"/>

        </RelativeLayout>


        <!-- Fourth setting -->
        <RelativeLayout
            android:id="@+id/setting_recognizer_language_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/settings_item_texts_right_margin"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_marginStart="@dimen/settings_item_basic_padding"
                android:layout_marginBottom="@dimen/settings_item_basic_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
                    android:textSize="@dimen/settings_item_primary_text_size"
                    android:textColor="@color/primary_text"
                    android:text="@string/settings_recognizer_language_primary_text"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/settings_item_secondary_text_size"
                    android:textColor="@color/secondary_text"
                    android:text="@string/settings_recognizer_language_secondary_text"/>

            </LinearLayout>

            <Switch
                android:id="@+id/setting_recognizer_language_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/settings_item_switch_margin"
                android:layout_marginEnd="@dimen/settings_item_switch_margin"
                android:layout_alignParentEnd="true"
                android:clickable="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_divider_height"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"/>
        </RelativeLayout>


        <!-- Fifth setting -->
        <RelativeLayout
            android:id="@+id/setting_download_ingredients_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/settings_item_basic_padding"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_marginStart="@dimen/settings_item_basic_padding"
                android:layout_marginBottom="@dimen/settings_item_basic_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
                    android:textSize="@dimen/settings_item_primary_text_size"
                    android:textColor="@color/primary_text"
                    android:text="@string/settings_download_ingredients_primary_text"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_divider_height"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_alignParentBottom="true"
                android:background="@color/divider"/>
        </RelativeLayout>

        <!-- Fifth setting -->
        <RelativeLayout
            android:id="@+id/setting_download_languages_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/settings_item_basic_padding"
                android:layout_marginTop="@dimen/settings_item_basic_padding"
                android:layout_marginStart="@dimen/settings_item_basic_padding"
                android:layout_marginBottom="@dimen/settings_item_basic_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/settings_item_primary_text_margin"
                    android:textSize="@dimen/settings_item_primary_text_size"
                    android:textColor="@color/primary_text"
                    android:text="@string/settings_download_language_primary_text"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>