<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/theme_default_primary"
    android:orientation="vertical" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="50dp"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:text="@string/detail_commands_listening_message" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/listeningFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="center"
            android:padding="40dp"
            android:src="@drawable/ic_settings_voice_white_48dp"
            fab:fab_colorRipple="@color/theme_default_accent_light"
            fab:fab_colorNormal="@color/theme_default_accent"
            fab:fab_colorPressed="@color/theme_default_accent_dark"
            fab:fab_type="normal" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="30dp"
        android:gravity="bottom" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start" >

            <ImageButton
                android:id="@+id/repeat"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_replay_white_48dp"
                android:tint="@color/theme_default_primary"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/detail_direction_button_negative" />

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/timer"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_alarm_black_48dp"
                android:tint="@color/theme_default_primary"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/detail_direction_button_negative" />

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end" >

            <ImageButton
                android:id="@+id/next"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_fast_forward_white_48dp"
                android:tint="@color/theme_default_primary"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/detail_direction_button_negative" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>