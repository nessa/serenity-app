<?xml version="1.0" encoding="utf-8"?>
<!-- transitionGroup set to avoid exception:
     Layer exceeds max. dimensions supported by the GPU -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true" >

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_type_of_dish_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background"
                android:gravity="top">

                <ImageView
                    android:contentDescription="@string/detail_type_of_dish_label"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_type_of_dish_24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/theme_default_primary" />
                <TextView
                    android:id="@+id/type_of_dish"
                    android:layout_width="wrap_content"
                    android:layout_height="24sp"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_difficulty_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background"
                android:gravity="top">

                <ImageView
                    android:contentDescription="@string/detail_difficulty_label"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_extension_black_24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/theme_default_primary" />
                <TextView
                    android:id="@+id/difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_cooking_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background"
                android:gravity="top">

                <ImageView
                    android:contentDescription="@string/detail_cooking_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/theme_default_primary" />
                <TextView
                    android:id="@+id/cooking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_servings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background"
                android:gravity="top">

                <ImageView
                    android:contentDescription="@string/detail_servings_label"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_group_black_24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/theme_default_primary" />
                <TextView
                    android:id="@+id/servings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_source_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background"
                android:gravity="top">

                <ImageView
                    android:contentDescription="@string/detail_source_label"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_format_align_left_black_24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/theme_default_primary" />
                <TextView
                    android:id="@+id/source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:autoLink="web"
                    android:textSize="20sp"
                    android:gravity="start" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/detail_rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background"
                android:gravity="top">

                <ImageView
                    android:contentDescription="@string/detail_rating_label"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="4dp"
                    android:tint="@color/theme_default_primary" />
                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

</FrameLayout>