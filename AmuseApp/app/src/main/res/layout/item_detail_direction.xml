<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/detail_directions_padding_top"
    android:gravity="top"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top" >

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_directions_step_height"
            android:background="@color/theme_default_primary"
            android:textColor="@android:color/white"
            android:textSize="@dimen/detail_directions_step_text"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/detail_directions_margin"
            android:gravity="top|center" />

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/detail_directions_text"
            android:layout_margin="@dimen/detail_directions_margin" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/extra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/detail_directions_margin"
        android:layout_marginRight="@dimen/detail_directions_margin"
        android:layout_marginBottom="@dimen/detail_directions_margin"
        android:gravity="end" >

        <ImageButton
            android:id="@+id/readDescription"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_hearing_black_48dp"
            android:tint="@android:color/white"
            android:layout_height="@dimen/detail_directions_button_size"
            android:layout_width="@dimen/detail_directions_button_size"
            android:layout_marginEnd="@dimen/detail_directions_button_margin"
            android:background="@drawable/detail_direction_button" />

        <ImageButton
            android:id="@+id/showPhoto"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_photo_black_48dp"
            android:tint="@android:color/white"
            android:layout_height="@dimen/detail_directions_button_size"
            android:layout_width="@dimen/detail_directions_button_size"
            android:layout_marginEnd="@dimen/detail_directions_button_margin"
            android:background="@drawable/detail_direction_button" />

        <ImageButton
            android:id="@+id/showVideo"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_slideshow_black_48dp"
            android:tint="@android:color/white"
            android:layout_height="@dimen/detail_directions_button_size"
            android:layout_width="@dimen/detail_directions_button_size"
            android:layout_marginEnd="@dimen/detail_directions_button_margin"
            android:background="@drawable/detail_direction_button" />

        <ImageButton
            android:id="@+id/timer"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_alarm_black_48dp"
            android:tint="@android:color/white"
            android:layout_height="@dimen/detail_directions_button_size"
            android:layout_width="@dimen/detail_directions_button_size"
            android:layout_marginEnd="@dimen/detail_directions_button_margin"
            android:background="@drawable/detail_direction_button" />

    </LinearLayout>

</LinearLayout>