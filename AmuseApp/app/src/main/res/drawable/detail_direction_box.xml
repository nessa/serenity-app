<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <!-- SHADOW LAYER -->
        <item android:left="4dp" android:top="4dp">
            <shape>
                <solid android:color="@color/detail_direction_shadow" />
                <corners android:radius="3dip"/>
            </shape>
        </item>
        <!-- CONTENT LAYER -->
        <item android:bottom="4dp" android:right="4dp">
            <shape>
                <solid android:color="@color/detail_direction_content" />
                <corners android:radius="3dip"/>
                <stroke
                    android:width="1px"
                    android:color="@color/detail_direction_shadow"/>
            </shape>
        </item>
    </layer-list>
</item>
</selector>